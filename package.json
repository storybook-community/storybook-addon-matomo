{
  "name": "@storybook-community/storybook-addon-matomo",
  "version": "0.0.0-semantically-released",
  "description": "Storybook addon for Matomo Analytics",
  "keywords": [
    "storybook-addon",
    "storybook-community",
    "storybook",
    "analytics",
    "matomo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storybook-community/storybook-addon-matomo.git"
  },
  "type": "module",
  "author": "Alex Nicholls (https://github.com/anicholls)",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./manager": "./dist/manager.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "manager.js",
    "preview.js"
  ],
  "bundler": {
    "previewEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ]
  },
  "scripts": {
    "build": "tsup",
    "build:storybook": "storybook build",
    "build:watch": "pnpm build --watch",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "pack": "pnpm pack --out storybook-addon-matomo-$(date +%s).tgz",
    "prebuild": "node -e \"fs.rmSync('./dist', { recursive: true, force: true })\"",
    "prepare": "husky",
    "prerelease": "zx scripts/prepublish-checks.js",
    "release": "pnpm build && pnpm semantic-release",
    "release:canary": "pnpm build && auto canary",
    "start": "run-p build:watch \"storybook --quiet\"",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.38.0",
    "@storybook/addon-docs": "next",
    "@storybook/addon-vitest": "next",
    "@storybook/react-vite": "next",
    "@types/node": "^22.18.12",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "auto": "^11.3.0",
    "boxen": "^8.0.1",
    "commitlint": "^19.8.1",
    "dedent": "^1.7.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "semantic-release": "^24.2.9",
    "storybook": "next",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^6.4.1",
    "vitest": "^3.2.4",
    "zx": "^8.8.5"
  },
  "peerDependencies": {
    "storybook": "^10.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "=22.19"
  },
  "storybook": {
    "displayName": "Matomo (community version)",
    "supportedFrameworks": [
      "supported-frameworks"
    ],
    "icon": "https://raw.githubusercontent.com/storybook-community/storybook-addon-matomo/main/static/icon.png"
  }
}
