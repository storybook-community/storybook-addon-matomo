{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "noImplicitAny": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "tsup.config.ts"]
}
